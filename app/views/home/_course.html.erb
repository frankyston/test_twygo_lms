<a href="<%= url_to_course(course) %>">
  <div class="relative bg-gray-100 rounded-lg overflow-hidden shadow-md">
    <%= image_tag course.cover, class: "hover:grow hover:shadow-lg", class: 'w-full h-48 object-cover' %>

    <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-end p-4">
      <h2 class="text-white text-lg font-semibold"><%= course.title %></h2>
      <p class="text-white text-sm mt-1">Instrutor: <%= course.instructor %></p>
    </div>
  </div>
</a>
