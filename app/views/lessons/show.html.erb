<section class="bg-white pb-8">
  <div class="container mx-auto flex items-center flex-wrap pt-4">
    <div class="w-full mx-auto p-6 border border-gray-300 rounded-lg">
      <!-- Título do curso -->
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold mb-4"><%= @course.title %></h1>
        <%= link_to "Voltar", course_path(@course), class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded" %>
      </div>

      <!-- Estrutura Principal -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <!-- Coluna do Vídeo -->
        <div class="md:col-span-2">
          <div class="w-full h-auto bg-gray-800 rounded-lg flex items-center justify-center">
            <video class="w-full my-3" controls>
              <source src="<%= url_for(@lesson.file) %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>

        </div>

        <div class="flex flex-col space-y-4">

            <% @course.lessons.each do |lesson| %>
              <%= link_to course_lesson_path(@course, lesson), class: "bg-#{lesson.id == @lesson.id ? 'green-100' : 'gray-100'} p-4 rounded-lg shadow" do %>
                <div class="space-y-4">
                  <div class=" ">
                    <h2 class="text-lg font-medium"><%= lesson.title %></h2>
                    <p class="text-sm text-gray-600"><%= truncate(lesson.description, length: 80) %></p>
                    <p class="text-sm text-gray-600">Tempo: <%= lesson.duration %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>

  </div>
</section>
