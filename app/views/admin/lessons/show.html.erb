<section class="bg-white py-1">
  <div class="container mx-auto flex items-center flex-wrap pt-3 pb-12">
    <h1 class="text-2xl font-bold"><%= @lesson.title %></h1>
    <div class="w-full text-right mb-2">
      <a href="<%= admin_course_path(@course) %>" class="bg-blue-500 text-white px-4 py-2 rounded-md">
        <%= I18n.t('back') %>
      </a>
    </div>

    <div class="flex flex-col mt-4">
      <p class="text-gray-500"><%= @lesson.description %></p>
      <p class="text-gray-500"><%= I18n.t("duration") %>: <%= @lesson.duration %> <%= I18n.t("minutes") %></p>
      <p class="text-gray-500"><%= I18n.t("size") %>: <%= @lesson.bytes_to_megabytes %> MB</p>
    </div>

    <video class="w-full my-3" controls>
      <source src="<%= url_for(@lesson.file) %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>

    <div class="flex flex-col mt-4">
      <h2 class="text-xl font-bold"><%= I18n.t("description") %></h2>
      <%= @lesson.description %>
    </div>
  </div>
</section>
