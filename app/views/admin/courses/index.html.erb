<section class="bg-white py-1">
  <div class="container mx-auto flex items-center flex-wrap pt-3 pb-12">
    <h1 class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl mb-2"><%= I18n.t("activerecord.models.#{Course.to_s.downcase}.two")%></h1>
    <div class="w-full flex items-center justify-between mb-2">
      <a href="<%= new_admin_course_path %>" class="bg-blue-500 text-white px-4 py-2 rounded-md">
        <%= I18n.t('new', model: I18n.t("activerecord.models.#{Course.to_s.downcase}.one")) %>
      </a>
    </div>

    <div class="w-full overflow-x-auto">
      <% if @courses.empty? %>
        <p class="text-center text-gray-500"><%= I18n.t('not_found', model: I18n.t("activerecord.models.#{Course.to_s.downcase}.two")) %></p>
      <% else %>
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 ">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                <%= t('activerecord.attributes.course.title') %>
              </th>
              <th scope="col" class="px-6 py-3">
                <%= t('activerecord.attributes.course.description') %>
              </th>
              <th scope="col" class="px-6 py-3">
                <%= t('activerecord.attributes.course.instructor') %>
              </th>
              <th scope="col" class="px-6 py-3 text-left w-32">
                <%= t('actions') %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= course.title %>
                </th>
                <td class="px-6 py-4">
                  <%= truncate(course.description, length: 280) %>
                </td>
                <td class="px-6 py-4">
                  <%= course.instructor %>
                </td>
                <td class="flex items-center px-6 py-4 text-right">
                  <%= link_to I18n.t('show'), admin_course_path(course), class: 'font-medium text-white bg-green-500 px-4 py-2 mr-3 rounded-md hover:underline' %>
                  <%= link_to I18n.t('edit'), edit_admin_course_path(course), class: 'font-medium text-white bg-blue-500 px-4 py-2 rounded-md hover:underline' %>
                  <%= button_to I18n.t('destroy'), admin_course_path(course), method: :delete, form: { data: { turbo_confirm: I18n.t('confirm_message') } }, class: 'font-medium text-white bg-red-500 px-4 py-2 rounded-md hover:underline ms-3' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</section>
