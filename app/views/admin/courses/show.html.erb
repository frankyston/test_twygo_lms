<section class="bg-white py-1">
  <div class="container mx-auto flex items-center flex-wrap pt-3 pb-12">
    <h1 class="text-2xl font-bold"><%= @course.title %></h1>
    <div class="w-full text-right mb-2">
      <a href="<%= admin_courses_path %>" class="bg-blue-500 text-white px-4 py-2 rounded-md">
        <%= I18n.t('back') %>
      </a>
    </div>

    <%= @course.description %>
    <h2 class="text-xl font-bold my-4"><%= I18n.t('lessons') %></h2>
    <div class="w-full text-right mb-4">
      <%= link_to 'Criar aula', new_admin_course_lesson_path(@course), class: 'bg-blue-500 text-white px-4 py-2 rounded-md' %>
    </div>


    <div class="space-y-4 w-full">
      <% if @lessons.any? %>
        <% @lessons.each do |lesson| %>
          <div class="flex items-center mb-4 border border-gray-400 rounded-lg">
            <div class="w-64 h-40 flex-shrink-0">
              <img src="https://via.placeholder.com/128x80" alt="Thumbnail do Vídeo" class="w-full h-full object-cover rounded-lg">
            </div>
            <div class="ml-4">
              <h2 class="text-lg font-semibold text-gray-900">Título do Vídeo</h2>
              <p class="text-sm text-gray-500">Descrição curta do vídeo que aparece aqui. Pode ser uma pequena introdução ou resumo.</p>
              <p class="text-xs text-gray-400 mt-1">Publicado em: 01/01/2023</p>
              <p class="mt-2">
                <button class="bg-blue-500 text-white text-xs font-semibold py-1 px-2 rounded hover:bg-blue-600">
                  <%= I18n.t('edit') %>
                </button>
                <button class="bg-red-500 text-white text-xs font-semibold py-1 px-2 rounded hover:bg-red-600">
                  <%= I18n.t('destroy') %>
                </button>
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500"><%= I18n.t('not_found', model: I18n.t("activerecord.models.#{Lesson.to_s.downcase}.two")) %></p>
      <% end %>
    </div>
  </div>
</section>
