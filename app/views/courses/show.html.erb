<section class="bg-white pb-8">
  <div class="container mx-auto flex items-center flex-wrap pt-4">

    <div class="w-full mx-auto p-6 border border-gray-300 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="col-span-2">
          <%= image_tag @course.cover, class: "w-full h-128 object-cover rounded-lg" %>
        </div>

        <div class="flex flex-col">
          <h2 class="text-2xl font-semibold text-gray-800"><%= @course.title %></h2>
          <p class="text-sm text-gray-600 mt-2"><%= I18n.t("instructor") %>: <%= @course.instructor %></p>
          <p class="text-sm text-gray-600"><%= I18n.t("duration") %>: <%= @course.duration %> <%= I18n.t("minutes") %></p>

          <%= link_to I18n.t("enroll"), enrollments_path(@course), method: :post, class: "mt-4 bg-blue-500 text-white text-sm font-semibold py-2 text-center px-4 rounded hover:bg-blue-600" %>

          <h3 class="text-lg font-medium text-gray-800 mt-4"><%= I18n.t("lessons") %>:</h3>
          <ul class="text-sm text-gray-600 mt-2 space-y-1">
            <% @course.lessons.each do |lesson| %>
              <li><%= lesson.title %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="mt-6">
        <h3 class="text-lg font-semibold text-gray-800"><%= I18n.t("description") %>:</h3>
        <p class="text-sm text-gray-600 mt-2">
          <%= @course.description %>
        </p>
      </div>
    </div>
  </div>
</section>
